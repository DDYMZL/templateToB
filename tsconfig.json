{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    // "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "/@/*": ["src/*"],
      "/mock/*": ["mock/*"],
      "/server/*": ["server/*"]
    },
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "plugins": [{ "name": "@vuedx/typescript-plugin-vue" }],
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.vue"],
  "exclude": ["node_modules"],
  "vueCompilerOptions": {
    "experimentalDisableTemplateSupport": true
  }
}
